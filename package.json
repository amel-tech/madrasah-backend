{
  "name": "madrasah-backend",
  "version": "1.0.0",
  "description": "Online Medrese Projesinin backend reposudur.",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:tedrisat": "npm run start:dev --workspace=tedrisat",
    "dev:teskilat": "npm run start:dev --workspace=teskilat",
    "start": "turbo start",
    "start:tedrisat": "npm run start --workspace=tedrisat",
    "start:teskilat": "npm run start --workspace=teskilat",
    "clean": "turbo clean",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "audit": "turbo audit",
    "audit:ci": "turbo audit:ci",
    "audit:fix": "npm audit fix",
    "depcheck": "turbo depcheck",
    "security-check": "npm run audit:ci && npm run depcheck",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "npm@10.2.4",
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.5"
